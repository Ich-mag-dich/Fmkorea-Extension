{
    "name": "Fmkorea+",
    "description": "Extension for FmKorea.",
    "version": "1.0",
    "manifest_version": 2,
    "background": {
        "scripts": ["thirdParty/jquery-3.6.0.min.js",
        "background.js"
        ]
    },
    "permissions": [
      "https://fmkorea.com/*",
      "storage",
      "activeTab",
      "webRequest",
      "webRequestBlocking",
      "contextMenus"
    ],
    
    "browser_action": {
        "default_icon": "./src/img/icon.png",
        "default_popup": "./popup.html"
      },
    "options_page": "options.html",
    "externally_connectable": {
    "matches": ["https://*.fmkorea.com/*"]
    },
    "content_scripts": [
      {
       "matches": ["https://*.fmkorea.com/*"],
       "js": ["thirdParty/jquery-3.6.0.min.js", "contentscript.js"]
      }
  ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}